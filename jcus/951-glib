PKG="glib"
PKG_VERSION="2.54.3"
PKG_FILE="glib-2.54.3.tar.xz"
URL="http://ftp.gnome.org/pub/gnome/sources/glib/2.54/${PKG_FILE}"
MD5="16e886ad677bf07b7d48eb8188bcf759"
for i in PATCH{1..10}; do
   unset $i
done
# Required patch: 
PATCH1="http://www.linuxfromscratch.org/patches/blfs/svn/glib-2.54.3-meson_fixes-1.patch 24ef3427806a8668be47c8150b592915"
#Optional patch: 
PATCH2="http://www.linuxfromscratch.org/patches/blfs/svn/glib-2.54.3-skip_warnings-1.patch 6252d5c0b400558908b8a41b772c9794"


( cat << "xEOFx"
    patch -Np1 -i ../glib-2.54.3-skip_warnings-1.patch
    patch -Np1 -i ../glib-2.54.3-meson_fixes-1.patch &&
    mkdir build-glib &&
    cd    build-glib &&
    meson --prefix=/usr -Dwith-pcre=system -Dwith-docs=no .. &&
    ninja
    ninja install &&
    chmod -v 755 /usr/bin/{gdbus-codegen,glib-gettextize} &&
    mkdir -p /usr/share/doc/glib-2.54.3 &&
    cp -r ../docs/reference/{NEWS,README,gio,glib,gobject} /usr/share/doc/glib-2.54.3
xEOFx
) > tmp
