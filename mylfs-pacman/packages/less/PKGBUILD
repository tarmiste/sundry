pkgname=less
pkgver=487
pkgrel=1
pkgdesc="A terminal based program for viewing text files"
arch=('x86_64')
url="http://www.greenwoodsoftware.com/less"
license=('GPL3')
source=(${pkgname}-${pkgver}.tar.gz)

build() {
    cd "${pkgname}-${pkgver}"
    ./configure --prefix=/usr --sysconfdir=/etc
    make
}

package() {
    cd "${pkgname}-${pkgver}"
    make DESTDIR=${pkgdir} install
}
