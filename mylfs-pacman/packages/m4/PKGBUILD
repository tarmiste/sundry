pkgname=m4
pkgver=1.4.18
pkgrel=1
pkgdesc="The GNU macro processor"
arch=('x86_64')
url="http://www.gnu.org/software/m4"
license=('GPL3')
source=(${pkgname}-${pkgver}.tar.xz)

build() {
    cd "${pkgname}-${pkgver}"
    ./configure --prefix=/usr
    make
}

check() {
    cd "${pkgname}-${pkgver}"
    make check 2>&1 | tee ${pkgname}-${pkgver}-check-log
}

package() {
    cd "${pkgname}-${pkgver}"
    make prefix=${pkgdir}/usr install
}
